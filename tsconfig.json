{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite-plugin-eslint"]
  },
  "include": [
    "src",
    "components/ui/theme-provider.tsx",
    "components/extension/tree-view.tsx",
    "components/extension/carousel.tsx"
  ]
}
